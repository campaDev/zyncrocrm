---
// Importamos los estilos globales que acabamos de crear
import "../styles/global.css";
// Importamos ClientRouter para esa navegación suave tipo App

import { ClientRouter } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Zyncro CRM - Gestión Inteligente de WhatsApp" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Zyncro CRM</title>
    <ClientRouter />
  </head>
  <body class="font-sans antialiased h-full w-full">
    <slot />
  </body>
</html>
