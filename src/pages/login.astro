---
import LayoutBase from '../layouts/LayoutBase.astro';
import LoginForm from '../components/auth/LoginForm';

// Verificar si ya tiene sesión en el servidor (Opcional por ahora, pero buena práctica)
// Si quisieras redirigir automáticamente si ya está logueado, lo haríamos aquí.
---

<LayoutBase title="Iniciar Sesión">
  <div class="min-h-screen flex flex-col items-center justify-center p-4 relative overflow-hidden">
    
    <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-primary/20 rounded-full blur-[120px] -z-10"></div>
    <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-success/10 rounded-full blur-[120px] -z-10"></div>

    <div class="mb-8 text-center">
      <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-gradient-to-br from-primary to-primary-hover shadow-lg shadow-primary/40 mb-4">
        <span class="text-2xl">⚡</span>
      </div>
      <h1 class="text-3xl font-bold text-txt-title tracking-tight">Zyncro CRM</h1>
    </div>

    <LoginForm client:load />

    <p class="mt-8 text-xs text-txt-body/50">
      &copy; 2026 Zyncro CRM. Sistema seguro.
    </p>
  </div>
</LayoutBase>
