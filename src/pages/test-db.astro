---
import { supabase } from "../lib/supabase";
import LayoutBase from "../layouts/LayoutBase.astro"
// Hacemos una consulta a la tabla 'channels' que creamos con el schema.sql
// Debería devolver un array vacío [] si no hay canales, pero SIN error.
const { data, error } = await supabase.from('channels').select('*');

console.log('Resultado DB:', data);
console.log('Error DB:', error);
---
<LayoutBase title="Test de Conexión">
  <div class="min-h-screen flex items-center justify-center p-4">
    
    <div class="max-w-md w-full bg-panel border border-border rounded-xl shadow-lg p-8">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-txt-title">Estado del Sistema</h1>
        <span class="text-xs font-mono bg-surface px-2 py-1 rounded text-txt-body border border-border">v1.0</span>
      </div>

      {error ? (
        <div class="p-4 bg-error/10 border-l-4 border-error text-error rounded-r">
          <p class="font-bold text-sm">Error de Conexión</p>
          <p class="text-xs mt-1 opacity-90">{error.message}</p>
        </div>
      ) : (
        <div class="space-y-4">
          <div class="flex items-center gap-3 p-3 bg-success/10 border border-success/20 text-success rounded-lg">
            <div class="w-2 h-2 rounded-full bg-success animate-pulse"></div>
            <span class="font-semibold text-sm">Supabase Conectado</span>
          </div>
          
          <div class="bg-txt-title rounded-lg p-4 shadow-inner overflow-hidden">
            <p class="text-xs text-slate-400 mb-2 font-mono">DEBUG: channels table</p>
            <pre class="text-xs text-success font-mono overflow-auto max-h-32 scrollbar-thin">
{JSON.stringify(data, null, 2)}
            </pre>
          </div>
        </div>
      )}
      
      <div class="mt-6 text-center">
         <button class="w-full bg-primary hover:bg-primary-hover text-white font-medium py-2 px-4 rounded-lg transition-colors shadow-lg shadow-primary/30 cursor-pointer">
            Continuar al Login
         </button>
      </div>

    </div>
  </div>
</LayoutBase>
